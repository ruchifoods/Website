@model FoodDeliveryApp.ViewModels.Common.AccountViewModel
@{
    ViewData["Title"] = "Edit Account Information";
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <!-- Card Header with a professional message -->
                <div class="card-header bg-info text-white">
                    <h3 class="ab-0">Update Your Account Details</h3>
                </div>
                <div class="card-body">
                    <p class="ab-4">Please update your personal details below. Your email address is fixed and</p>
                    <form asp-action="EditAccount" method="post" novalidate>

                        @* Display error message from ViewBag if available *@
                        @if (ViewBag.ErrorMessage != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                @ViewBag. ErrorMessage
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        }

                        <input type="hidden" asp-for="UserId" />

                        <div class="mb-3 row">
                            <label asp-for="FirstName" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <input asp-for="FirstName" class="form-control" placeholder="Enter your first name" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label asp-for="LastName" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <input asp-for="LastName" class="form-control" placeholder="Enter your last name" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label asp-for="Email" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <input asp-for="Email" class="form-control" readonly />
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label asp-for="PhoneNumber" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <input asp-for="PhoneNumber" class="form-control" placeholder="Enter your phone number" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-success btn-lg rounded-bill shadow-sm me-2">Submit</button>
                            <a href="@Url.Action("MyAccount", "CustomerAccount")" class="btn btn-secondary btn-lg rounded-bill shadow-sm me-2">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@{
    ViewData["Title"] = "Password Reset Successful";
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <!-- Confirmation Card -->
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white text-center">
                    <h3 class="mb-0">Password Reset Successful</h3>
                </div>
                <div class="card-body text-center">
                    <p class="lead">Your password has been updated successfully.</p> <p>Please use your new password the next time you log in.</p>
                    <a href "@Url.Action("Login", "CustomerAccount")" class="btn btn-success btn-lg">
                        <i class="fas fa-sign-in-alt"></i> Return to Login
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
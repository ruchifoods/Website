@model FoodDeliveryApp.Models.OrderItemList
@{
    ViewData["Title"] = "Cart";
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
    decimal total = 0;
    decimal orederValue = 0;
    //int categoryId = -1;
    int categoryId = Model.CategoryId;
}




<!-- Checkout Container -->
<div class="container mx-auto my-8 grid md:grid-cols-3 gap-6">

    <!-- Customer Details -->
    <div class="md:col-span-2 bg-white rounded-2xl shadow-md p-6">
        <h2 class="text-xl font-semibold text-purple-700 mb-4">Customer Details</h2>

        <div class="grid sm:grid-cols-2 gap-4">
            <div>
                <label class="block text-sm font-medium text-gray-600 mb-1">First Name</label>
                <input type="text" id="firstname" placeholder="" class="w-full border border-gray-300 rounded-lg p-2.5 focus:ring-2 focus:ring-purple-500 focus:border-purple-500 outline-none" />
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-600 mb-1">Last Name</label>
                <input type="text" id="lastname" placeholder="" class="w-full border border-gray-300 rounded-lg p-2.5 focus:ring-2 focus:ring-purple-500 focus:border-purple-500 outline-none" />
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-600 mb-1">Phone</label>
                <input type="tel" id="phone" placeholder="" class="w-full border border-gray-300 rounded-lg p-2.5 focus:ring-2 focus:ring-purple-500 focus:border-purple-500 outline-none" />
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-600 mb-1">Email</label>
                <input type="email" id="email" placeholder="" class="w-full border border-gray-300 rounded-lg p-2.5 focus:ring-2 focus:ring-purple-500 focus:border-purple-500 outline-none" />
            </div>
        </div>

        <div class="mt-4">
            <label class="block text-sm font-medium text-gray-600 mb-1">Comment</label>
            <textarea id="comment" rows="3" placeholder="" class="w-full border border-gray-300 rounded-lg p-2.5 focus:ring-2 focus:ring-purple-500 focus:border-purple-500 outline-none"></textarea>
        </div>

        <div class="mt-4 grid sm:grid-cols-2 gap-4">
            <div>
                <label class="block text-sm font-medium text-gray-600 mb-1">Pickup / Delivery</label>
                <select id="deliveryMode" class="w-full border border-gray-300 rounded-lg p-2.5 focus:ring-2 focus:ring-purple-500 focus:border-purple-500 outline-none">
                    @* <option value="delivery">Home Delivery</option> *@
                    <option value="pickup">Pickup</option>
                </select>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-600 mb-1">Pickup / Delivery Time</label>
                <select id="deliveryTime" class="w-full border border-gray-300 rounded-lg p-2.5 focus:ring-2 focus:ring-purple-500 focus:border-purple-500 outline-none">
                    @foreach (var item in Model.PickUpTimes)
                    {
                        <option value="@item.Time">@item.Time</option>
                    }
                </select>
            </div>
        </div>

        <div class="mt-8 bg-white rounded-2xl">
            <h4 class="text-lg font-semibold text-purple-700 mb-2">Pickup Address</h4>

            <div class="text-slate-700 text-sm leading-relaxed space-y-1">
                <div>Ruchi Kitchen</div>
                <div>1602 Village Market Blvd SE</div>
                <div>Leesburg, VA 20175</div>
                <div>
                    <b>For Map:</b>
                    <a href="https://maps.app.goo.gl/TMnZeDbP2hD9qofH9"
                       target="_blank"
                       class="text-purple-600 hover:text-purple-800 underline ml-1">
                        Click here
                    </a>
                </div>
            </div>
        </div>

    </div>

    <!-- Order Summary -->
    <div class="bg-white rounded-2xl shadow-md p-6">
        <h2 class="text-xl font-semibold text-purple-700 mb-4">Order Summary</h2>

        <div id="orderItems" class="divide-y divide-gray-200 mb-4">
            <!-- Sample items -->
            @foreach (var item in Model.Items)
            {
                string quantity = (item.Quantity == "Full" || item.Quantity == "Half" || item.Quantity == "Quarter") ? "(" + item.SubQuantity + " x " + item.Quantity + ")" : item.Quantity;

                <div class="flex justify-between py-2">
                    <span>@item.MenuItem.ItemName × @quantity</span>
                    <span class="font-medium">$@item.TotalPrice</span>
                </div>
            }

        </div>

        <div class="border-t border-gray-200 pt-3">
            <div class="flex justify-between text-lg font-semibold text-purple-700 mt-2">
                <span>Total</span>
                <span>$@Model.Items.Sum(x => x.TotalPrice)</span>
            </div>
        </div>

        <button id="placeOrder" class="w-full mt-5 bg-purple-600 hover:bg-purple-700 text-white font-semibold py-3 rounded-xl shadow-lg transition-all duration-300">
            Place Order
        </button>
    </div>

</div>

<!-- Success Modal -->
<div id="successModal" class="fixed inset-0 bg-black/40 hidden items-center justify-center">
    <div class="bg-white p-6 rounded-2xl text-center shadow-xl w-80">
        <h3 class="text-lg font-semibold text-purple-700 mb-2">Order Placed Successfully 🎉</h3>
        <p class="text-gray-600 text-sm mb-4">Your delicious food will arrive soon.</p>
        <button onclick="closeModal()" class="bg-purple-600 hover:bg-purple-700 text-white px-4 py-2 rounded-lg font-medium">OK</button>
    </div>
</div>

<script>
    const modal = document.getElementById("successModal");

    document.getElementById("placeOrder").addEventListener("click", () => {
      const name = document.getElementById("name").value.trim();
      const phone = document.getElementById("phone").value.trim();
      const address = document.getElementById("address").value.trim();

      if (!name || !phone || !address) {
        alert("Please fill out all required fields.");
        return;
      }

      modal.classList.remove("hidden");
      modal.classList.add("flex");
    });

    function closeModal() {
      modal.classList.add("hidden");
    }
</script>
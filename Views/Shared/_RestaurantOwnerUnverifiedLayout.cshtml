<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Restaurant Owner Portal</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <!-- Include Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />
</head>
<body class="d-flex flex-column min-vh-100">
    <nav class="navbar navbar-expand-lg navbar-dark bg-secondary">
        <a class="navbar-brand" href="@Url.Action("Index","RestaurantOwnerAccount")">Restaurant Owner Portal</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggle-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                @if (User?.Identity?.IsAuthenticated == true)
                {
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Logout","RestaurantOwnerAccount")">Logout</a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Login","RestaurantOwnerAccount")">Sign In</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Register","RestaurantOwnerAccount")">Register</a>
                    </li>
                }
            </ul>
        </div>
    </nav>

    <!-- Main content area that expands to fill available space -->
    <div class="container flex-grow-1 mt-3">
        @RenderBody()
    </div>

    <!-- Footer remains at the bottom of the viewport -->
    <footer class="footer bg-dark text-white text-center py-3">
        <div class="container">
            <span>© @DateTime.Now.Year Food Delievry App. All rights reserved.</span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

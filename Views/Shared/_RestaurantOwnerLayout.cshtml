<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <!-- Recommended for Responsive Web Design -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <title>@ViewBag.Title - Restaurant Owner Panel</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <!-- Include Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />
</head>
<body>
    <!-- Top Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
        <!-- Brand -->
        <a class="navbar-brand d-flex align-items-center" href="@Url.Action("Dashboard", "RestaurantOwnerAccount")">
            <!-- Use a distinct color for the icon to make it stand out -->
            <i class="bi bi-shop mr-2 text-warning" style="font-size: 1.25rem;"></i> Restaurant Owner Panel
        </a>
        <!-- Navbar Toggle (for the top nav on small screens) -->
        <button class="navbar-toggler" type="button" data-toggle="collaspe" data-target="#topNav"
                aria-controls="topNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggle-icon"></span>
        </button>

        <!-- Collapsible Navbar Content -->
        <div class="collaspe navbar-collapse" id="topNav">
            <!-- Right-aligned content: Username + Logout -->
            <ul class="navbar-nav ml-auto">
                <li class="nav-item d-flex align-items-center text-white mr-3">
                    <span class="nav-link mb-0">@User?.Identity?.Name</span>
                </li>
                <li class="nav-item">
                    <a class="btn btn-outline-light" href="@Url.Action("Logout","RestaurantOwnerAccount")">
                        <i class="bi bi-box-arrow-right mr-1 text-light"></i> Logout
                    </a>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Main Container -->
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 d-md-block bg-light border-light min-vh-100 py-3" style="">
                <ul class="nav flex-column">
                    <!-- Dashboard -->
                    <li class="nav-item mb-2">
                        <a class="nav-link" href="@Url.Action("Dashboard","RestaurantOwnerAccount")">
                            <i class="bi bi-speedometer2 mr-2 text-primary"></i> Dashboard
                        </a>
                    </li>

                    <!-- My Account (Collapsible Sub-menu) -->
                    <li class="nav-item mb-2">
                        <a class="nav-link dropdown-toggle" style="color:black;" role="button" aria-expanded="false" aria-controls="myAccountSubMenu"
                           data-toggle="collapse" data-target="#myAccountSubMenu">
                            <i class="bi bi-person mr-2 text-success"></i> My Account
                        </a>
                        <div class="collapse" id="myAccountSubMenu">
                            <ul class="nav flex-column ml-3">
                                <li class="nav-item">
                                    <a class="nav-link" style="color:black;" href="@Url.Action("MyAccount","RestaurantOwnerAccount")">
                                        <i class="bi bi-eye mr-2 text-dark"></i> View Account
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" style="color:black;" href="@Url.Action("ChangePassword","RestaurantOwnerAccount")">
                                        <i class="bi bi-key mr-2 text-warning"></i> Change Password
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" style="color:black;" href="@Url.Action("ManageAddress","RestaurantOwnerAccount")">
                                        <i class="bi bi-geo-alt mr-2 text-danger"></i> Manage Address
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" style="color:black;" href="@Url.Action("ManageBankDetails","RestaurantOwnerAccount")">
                                        <i class="bi bi-credit-card-2-front mr-2 text-secondary"></i> Manage Bank Details
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" style="color:black;" href="@Url.Action("ManageBusinessDetails","RestaurantOwnerAccount")">
                                        <i class="bi bi-building mr-2 text-info"></i> Manage Business Details
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </li>

                    <!-- Manage Orders -->
                    <li class="nav-item mb-2">
                        <a class="nav-link" style="color:black;" href="@Url.Action("ManageOrders","RestaurantOwnerAccount")">
                            <i class="bi bi-card-list mr-2 text-info"></i>Manage Orders
                        </a>
                    </li>

                    <!-- Manage Items -->
                    <li class="nav-item mb-2">
                        <a class="nav-link" style="color:black;" href="@Url.Action("ManageMenus","RestaurantOwnerAccount")">
                            <i class="bi bi-card-list mr-2 text-info"></i>Manage Items
                        </a>
                    </li>

                    <!-- Manage Categories -->
                    <li class="nav-item mb-2">
                        <a class="nav-link" style="color:black;" href="@Url.Action("ManageCategories","RestaurantOwnerAccount")">
                            <i class="bi bi-card-list mr-2 text-info"></i>Manage Schedules
                        </a>
                    </li>

                    <!-- Manage Pickup Time -->
                    <li class="nav-item mb-2">
                        <a class="nav-link" style="color:black;" href="@Url.Action("ManagePickupTime","RestaurantOwnerAccount")">
                            <i class="bi bi-card-list mr-2 text-info"></i>Manage Pickup Time
                        </a>
                    </li>
                </ul>
            </nav>

            <!--Main Content Area -->
            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4 py-3">
                @RenderBody()
            </main>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
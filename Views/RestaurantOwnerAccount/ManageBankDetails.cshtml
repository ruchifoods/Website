@model FoodDeliveryApp.ViewModels.Common.BankDetailsViewModel
@{
    ViewBag.Title = "Manage Bank Details";
    Layout = "~/Views/Shared/_RestaurantOwnerLayout.cshtml";
}
<div class="container mt-2">
    <!-- Page Header -->
    <div class="row">
        <div class="col-12">
            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-primary text-white d-flex align-items-center">
                    <i class="bi bi-bank mr-2 text-warning" style="font-size: 1.5rem;"></i>
                    <h3 class="mb-0">Manage Bank Details</h3>
                </div>
                <div class="card-body">
                    <p class="mb-0">
                        Review and update your bank details below to ensure your payment information is secure and up to date.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Success Message Alert -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="row">
            <div class="col-12">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle-fill mr-2 text-success"></i>@TempData["SuccessMessage"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        </div>
    }

    <!-- Bank Details Card / Info Alert -->
    <div class="row">
        <div class="col-12">
            @if (Model != null)
            {
                <div class="card shadow-sm mb-3">
                    <div class="card-header bg-secondary text-white">
                        <h5 class="mb-0 d-flex align-items-center">
                            <i class="bi bi-info-circle-fill mr-2 text-info"></i> Your Bank Details
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <strong>
                                <i class="bi bi-person-fill mr-1 text-primary"></i> Account Holder Name
                            </strong>
                            <p class="mb-0">@Model.AccountHolderName</p>
                        </div>
                        <div class="mb-3">
                            <strong>
                                <i class="bi bi-bank mr-1 text-info"></i> Bank Name
                            </strong>
                            <p class="mb-0">@Model.BankName</p>
                        </div>
                        <div class="mb-3">
                            <strong>
                                <i class="bi bi-credit-card-2-front-fill mr-1 text-success"></i> Account Number
                            </strong>
                            <p class="mb-0">@Model.AccountNumber</p>
                        </div>
                        <div class="mb-3">
                            <strong>
                                <i class="bi bi-key-fill mr-1 text-success"></i> IFSC Code
                            </strong>
                            <p class="mb-0">@Model.IFSCCode</p>
                        </div>
                    </div>
                    <div class="card-footer text-right">
                        <a href="@Url.Action("UpdateBankDetails", "RestaurantOwnerAccount")" class="btn btn-primary">
                            Update Bank Details
                        </a>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <h5 class="alert-heading">
                        <i class="bi bi-exclamation-circle-fill mr-2 text-warning"></i>No Bank Details Found
                    </h5>
                    <p>
                        Please add your bank details to ensure your payment information is secure and up to date.
                    </p>
                    <hr />
                    <div class="d-flex justify-content-end">
                        <a href="@Url.Action("UpdateBankDetails", "RestaurantOwnerAccount")" class="btn btn-primary">
                            <i class="bi bi-plus-circle mr-1 text-info"></i> Add Bank Details
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


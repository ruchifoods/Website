@model FoodDeliveryApp.ViewModels.RestaurantOwners.RestaurantOwnerBusinessDetailsViewModel
@{
    ViewBag.Title = "Manage Business Details";
    Layout = "~/Views/Shared/_RestaurantOwnerLayout.cshtml";
}
<div class="container mt-2">
    <!-- Page Header -->
    <div class="row">
        <div class="col-12">
            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-primary text-white d-flex align-items-center">
                    <!-- Use an icon that represents business or buildings -->
                    <i class="bi bi-building mr-2 text-warning" style="font-size: 1.5rem;"></i>
                    <h3 class="mb-0">Manage Business Details</h3>
                </div>
                <div class="card-body">
                    <p class="mb-0">
                        Keep your business information up to date to maintain compliance and build trust with customers.
                        Ensure details such as licenses, registrations, and GSTIN remain current.
                    </p>
                </div>
            </div>
        </div>
    </div>
    <!-- Success Message Alert -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="row">
            <div class="col-12">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <!--A check-circle icon indicates success -->
                    <i class="bi bi-check-circle-fill mr-2 text-success"></i>@TempData["SuccessMessage"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        </div>
    }
    <!-- Business Details Card / Info Alert -->
    <div class="row">
        <div class="col-12">
            @if (Model != null)
            {
                <div class="card shadow-sm mb-3">
                    <div class="card-header bg-secondary text-white">
                        <h5 class="mb-0 d-flex align-items-center">
                            <i class="bi bi-card-checklist mr-2 text-warning"></i> Your Business Details
                        </h5>
                    </div>
                    <div class="card-body">
                        <p class="text-muted">
                            The following information helps validate your restaurant's compliance with local regulations.
                            Keeping these records accurate ensures smoother operations and builds customer confidence.
                        </p>
                        <div class="mb-3">
                            <strong>
                                <!-- Icon for a certificate or official document -->
                                <i class="bi bi-file-earmark-text-fill mr-1 text-primary"></i> Business License Number
                            </strong>
                            <p class="mb-0">@Model.BusinessLicenseNumber</p>
                        </div>
                        <div class="mb-3">
                            <strong>
                                <!-- Icon for a checklist or forms -->
                                <i class="bi bi-clipboard-check mr-1 text-info"></i> Business Registration Number
                            </strong>
                            <p class="mb-0">@Model.BusinessRegistrationNumber</p>
                        </div>
                        <div class="mb-3">
                            <strong>
                                <!-- Icon for GST or finance -->
                                <i class="bi bi-receipt-cutoff mr-1 text-success"></i> GSTIN
                            </strong>
                            <p class="mb-0">@Model.GSTIN</p>
                        </div>
                    </div>
                    <div class="card-footer text-right">
                        <a href="@Url.Action("UpdateBusinessDetails", "RestaurantOwnerAccount")" class="btn btn-primary">
                            Update Business Details
                        </a>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <h5 class="alert-heading d-flex align-items-center">
                        <i class="bi bi-exclamation-circle-fill mr-2 text-warning"></i>
                        No Business Details Found
                    </h5> <p>
                        It looks like you haven't added your business details yet. Updating this information is essential
                        I
                        to ensure a smooth, compliant operation for your restaurant.
                    </p>
                    <hr />
                    <div class="d-flex justify-content-end">
                        <a href="@Url.Action("UpdateBusinessDetails", "RestaurantOwnerAccount")" class="btn btn-primary">
                            Add Business Details
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

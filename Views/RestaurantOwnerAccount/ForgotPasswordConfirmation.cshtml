@{
    ViewBag.Title = "Forgot Password Confirmation";
    Layout = "~/Views/Shared/_RestaurantOwnerUnverifiedLayout.cshtml";
}

<div class="container py-2">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 text-center">
                <div class="card-body p-5">
                    <!-- Success Icon -->
                    <div class="mb-3">
                        <i class="bi bi-envelope-check-fill text-primary" style="font-size: 4rem;"></i>
                    </div>
                    <h3 class="text-success">Password Reset Link Sent</h3>
                    <p class="text-muted">
                        A password reset link has been sent to your registered email address.
                        Please check your inbox and follow the instructions to reset your password.
                    </p>

                    <!-- Call to Action -->
                    <a href="@Url.Action("Login", "RestaurantOwnerAccount")" class="btn btn-primary btn-lg mt-3">
                        <i class="bi bi-box-arrow-in-left"></i>Back to Login
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@{
    ViewBag.Title = "Password Reset Confirmation";
    Layout = "~/Views/Shared/_RestaurantOwnerUnverifiedLayout.cshtml";
}

<div class="container my-2">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <!-- Confirmation Card -->
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white text-center">
                    <i class="bi bi-check-circle-fill" style="font-size: 2rem;"></i> <h3 class="mb-0 mt-2">Password Reset Successful</h3>
                </div>
                <div class="card-body text-center">
                    <p class="lead">Your password has been updated successfully.</p>
                    <p>Please use your new password the next time you log in to access your account securely.</p>
                    <a href="@Url.Action("Login", "RestaurantOwnerAccount")" class="btn btn-success btn-lg">
                        Return to Login
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>